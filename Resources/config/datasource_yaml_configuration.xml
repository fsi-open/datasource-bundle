<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="datasource.subscriber.configuration.configuration_builder.class">FSi\Bundle\DataSourceBundle\DataSource\Extension\Configuration\EventSubscriber\ConfigurationBuilder</parameter>
        <parameter key="datasource.subscriber.configuration.locator.class">FSi\Bundle\DataSourceBundle\DataSource\Extension\Configuration\ConfigurationLocator</parameter>
        <parameter key="datasource.subscriber.configuration.loader.class">FSi\Bundle\DataSourceBundle\DataSource\Extension\Configuration\ConfigurationLoader</parameter>
    </parameters>

    <services>
        <service id="datasource.subscriber.configuration.locator" class="%datasource.subscriber.configuration.locator.class%">
            <argument type="service" id="kernel" />
        </service>
        <service id="datasource.subscriber.configuration.loader" class="%datasource.subscriber.configuration.loader.class%">
            <argument type="service" id="kernel" />
            <argument type="service" id="datasource.subscriber.configuration.locator" />
        </service>
        <service id="datasource.subscriber.configuration.configuration_builder" class="%datasource.subscriber.configuration.configuration_builder.class%">
            <tag name="datasource.subscriber" alias="configuration.configuration_builder"/>
            <argument type="service" id="kernel" />
            <argument type="service" id="datasource.subscriber.configuration.loader" />
        </service>
    </services>
</container>
