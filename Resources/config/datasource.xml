<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="datasource.factory.class">FSi\Component\DataSource\DataSourceFactory</parameter>
        <parameter key="datasource.extension.class">FSi\Component\DataSource\Extension\Symfony\DependencyInjection\DependencyInjectionExtension</parameter>
        <parameter key="datasource.driver.factory.manager.class">FSi\Component\DataSource\Driver\DriverFactoryManager</parameter>
        <parameter key="datasource.driver.extension.class">FSi\Component\DataSource\Extension\Symfony\DependencyInjection\Driver\DriverExtension</parameter>
        <parameter key="datasource.driver.doctrine.factory.class">FSi\Component\DataSource\Driver\Doctrine\DoctrineFactory</parameter>
        <parameter key="datasource.driver.collection.factory.class">FSi\Component\DataSource\Driver\Collection\CollectionFactory</parameter>
    </parameters>

    <services>
        <!-- Doctrine extensions -->
        <service id="datasource.driver.doctrine.extension" class="%datasource.driver.extension.class%">
            <argument type="service" id="service_container" />
            <argument type="string">doctrine</argument>
            <!-- All services with tag "datasource.driver.doctrine.field" are inserted here by DataSourcePass -->
            <argument type="collection" />
            <!-- All services with tag "datasource.driver.doctrine.field.subscriber" are inserted here by DataSourcePass -->
            <argument type="collection" />
            <!-- All services with tag "datasource.driver.doctrine.subscriber" are inserted here by DataSourcePass -->
            <argument type="collection" />
            <tag name="datasource.driver.extension" alias="doctrine" />
        </service>

        <!-- DoctrineFactory -->
        <service id="datasource.driver.doctrine.factory" class="%datasource.driver.doctrine.factory.class%">
            <argument type="service" id="doctrine" />
            <argument type="service" id="datasource.factory" />
            <argument type="collection">
                <!--
                We don't need to be able to add more extensions.
                 * more fields can be registered with the datasource.driver.doctrine.field tag
                 * more field subscribers can be registered with the datasource.driver.doctrine.field.subscriber tag
                 * more listeners can be registered with the datasource.listener tag
                -->
                <argument type="service" id="datasource.driver.doctrine.extension" />
            </argument>
        </service>

        <!-- Doctrine/CoreExtension -->
        <service id="datasource.driver.doctrine.field.date" class="FSi\Component\DataSource\Driver\Doctrine\Extension\Core\Field\Date">
            <tag name="datasource.driver.doctrine.field" alias="date" />
        </service>
        <service id="datasource.driver.doctrine.field.datetime" class="FSi\Component\DataSource\Driver\Doctrine\Extension\Core\Field\DateTime">
            <tag name="datasource.driver.doctrine.field" alias="datetime" />
        </service>
        <service id="datasource.driver.doctrine.field.entity" class="FSi\Component\DataSource\Driver\Doctrine\Extension\Core\Field\Entity">
            <tag name="datasource.driver.doctrine.field" alias="entity" />
        </service>
        <service id="datasource.driver.doctrine.field.number" class="FSi\Component\DataSource\Driver\Doctrine\Extension\Core\Field\Number">
            <tag name="datasource.driver.doctrine.field" alias="number" />
        </service>
        <service id="datasource.driver.doctrine.field.text" class="FSi\Component\DataSource\Driver\Doctrine\Extension\Core\Field\Text">
            <tag name="datasource.driver.doctrine.field" alias="text" />
        </service>
        <service id="datasource.driver.doctrine.field.time" class="FSi\Component\DataSource\Driver\Doctrine\Extension\Core\Field\Time">
            <tag name="datasource.driver.doctrine.field" alias="time" />
        </service>

        <!-- Collection extensions -->
        <service id="datasource.driver.collection.extension" class="%datasource.driver.extension.class%">
            <argument type="service" id="service_container" />
            <argument type="string">collection</argument>
            <!-- All services with tag "datasource.driver.collection.field" are inserted here by DataSourcePass -->
            <argument type="collection" />
            <!-- All services with tag "datasource.driver.collection.field.subscriber" are inserted here by DataSourcePass -->
            <argument type="collection" />
            <!-- All services with tag "datasource.driver.collection.subscriber" are inserted here by DataSourcePass -->
            <argument type="collection" />
            <tag name="datasource.driver.extension" alias="collection" />
        </service>

        <!-- CollectionFactory -->
        <service id="datasource.driver.collection.factory" class="%datasource.driver.collection.factory.class%">
            <argument type="service" id="datasource.factory" />
            <argument type="collection">
                <!--
                We don't need to be able to add more extensions.
                 * more fields can be registered with the datasource.driver.doctrine.field tag
                 * more field subscribers can be registered with the datasource.driver.doctrine.field.subscriber tag
                 * more listeners can be registered with the datasource.listener tag
                -->
                <argument type="service" id="datasource.driver.collection.extension" />
            </argument>
        </service>

        <!-- Collection/CoreExtension -->
        <service id="datasource.driver.collection.field.date" class="FSi\Component\DataSource\Driver\Collection\Extension\Core\Field\Date">
            <tag name="datasource.driver.collection.field" alias="date" />
        </service>
        <service id="datasource.driver.collection.field.datetime" class="FSi\Component\DataSource\Driver\Collection\Extension\Core\Field\DateTime">
            <tag name="datasource.driver.collection.field" alias="datetime" />
        </service>
        <service id="datasource.driver.collection.field.number" class="FSi\Component\DataSource\Driver\Collection\Extension\Core\Field\Number">
            <tag name="datasource.driver.collection.field" alias="number" />
        </service>
        <service id="datasource.driver.collection.field.text" class="FSi\Component\DataSource\Driver\Collection\Extension\Core\Field\Text">
            <tag name="datasource.driver.collection.field" alias="text" />
        </service>
        <service id="datasource.driver.collection.field.time" class="FSi\Component\DataSource\Driver\Collection\Extension\Core\Field\Time">
            <tag name="datasource.driver.collection.field" alias="time" />
        </service>

        <!-- DataSource extensions -->
        <service id="datasource.extension" class="%datasource.extension.class%">
            <argument type="service" id="service_container" />
            <!-- All services with tag "datasource.driver.extension" are inserted here by DataSourcePass -->
            <argument type="collection" />
            <!-- All services with tag "datasource.subscriber" are inserted here by DataSourcePass -->
            <argument type="collection" />
        </service>

        <!-- DriverFactoryManager -->
        <service id="datasource.driver.factory.manager" class="%datasource.driver.factory.manager.class%">
            <argument type="collection">
                <argument type="service" id="datasource.driver.doctrine.factory" />
                <argument type="service" id="datasource.driver.collection.factory" />
            </argument>
        </service>

        <!-- DataSourceFactory -->
        <service id="datasource.factory" class="%datasource.factory.class%">
            <argument type="collection">
                <!--
                We don't need to be able to add more extensions.
                 * more driver extensions can be registered with the datasource.driver.extension tag
                 * more listeners can be registered with the datasource.subscriber tag
                -->
                <argument type="service" id="datasource.extension" />
            </argument>
        </service>

        <!-- PaginationExtension -->
        <service id="datasource.subscriber.pagination" class="FSi\Component\DataSource\Extension\Core\Pagination\EventSubscriber\Events">
            <tag name="datasource.subscriber" alias="pagination" />
        </service>

        <!-- OrderingExtension -->
        <service id="datasource.subscriber.ordering" class="FSi\Component\DataSource\Extension\Core\Ordering\EventSubscriber\Events">
            <tag name="datasource.subscriber" alias="ordering" />
        </service>
        <service id="datasource.driver.doctrine.subscriber.ordering" class="FSi\Component\DataSource\Extension\Core\Ordering\Driver\DoctrineExtension">
            <tag name="datasource.driver.doctrine.subscriber" alias="ordering" />
        </service>
        <service id="datasource.driver.collection.subscriber.ordering" class="FSi\Component\DataSource\Extension\Core\Ordering\Driver\CollectionExtension">
            <tag name="datasource.driver.collection.subscriber" alias="ordering" />
        </service>
        <service id="datasource.field.subscriber.ordering" class="FSi\Component\DataSource\Extension\Core\Ordering\Field\FieldExtension">
            <tag name="datasource.driver.doctrine.field.subscriber" alias="ordering" />
            <tag name="datasource.driver.collection.field.subscriber" alias="ordering" />
        </service>

        <!-- Symfony/CoreExtension -->
        <service id="datasource.subscriber.symfonyrequest" class="FSi\Component\DataSource\Extension\Symfony\Core\EventSubscriber\BindParameters">
            <tag name="datasource.subscriber" alias="symfonyrequest" />
        </service>

        <!-- Symfony/FormExtension -->
        <service id="datasource.subscriber.symfonyform" class="FSi\Component\DataSource\Extension\Symfony\Form\EventSubscriber\Events">
            <tag name="datasource.subscriber" alias="symfonyform" />
        </service>
        <service id="datasource.field.subscriber.symfonyform" class="FSi\Component\DataSource\Extension\Symfony\Form\Field\FormFieldExtension">
            <tag name="datasource.driver.doctrine.field.subscriber" alias="symfonyform" />
            <tag name="datasource.driver.collection.field.subscriber" alias="symfonyform" />
            <argument type="service" id="form.factory" />
        </service>

    </services>
</container>
